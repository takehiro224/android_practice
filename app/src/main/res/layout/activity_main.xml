<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tkwatanabe.webview_sample.MainActivity">

    <Button
        android:text="@string/homge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="btn_onclick" />

    <Button
        android:text="@string/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBbs"
        android:layout_below="@+id/btnHome"
        android:layout_centerHorizontal="true"
        android:onClick="btn_onclick" />

    <Button
        android:text="@string/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHelp"
        android:layout_below="@+id/btnBbs"
        android:layout_centerHorizontal="true"
        android:onClick="btn_onclick" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnHelp"
        android:id="@+id/wv" />
</RelativeLayout>
